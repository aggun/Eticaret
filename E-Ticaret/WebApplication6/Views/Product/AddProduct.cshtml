@model WebApplication6.Models.Entity.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddProduct</h1>
<br />
<form class="form-group" method="post">
    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        @Html.Label("Ürün Adı")
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        <br />
        @Html.Label("Ürün Açıklama")
        @Html.TextBoxFor(x => x.ProductDescripton, new { @class = "form-control" })
        <br />
        @Html.Label("Ürün Fiyatı")
        @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
        <br />
        @Html.Label("Ürün Adeti")
        @Html.TextBoxFor(x => x.ProductQuantity, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>
