@model WebApplication6.Models.Entity.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Güncelleme</h1>

<form class="form-group" method="post">
    <div class="form-group">
        <label>Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" enabled />
    </div>
    @Html.Label("Ürün Kategorisi")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })

    <br />
    <div class="form-group">
        <label>Ürün Açıklaması</label>
        <input asp-for="ProductDescripton" class="form-control" enabled />
    </div>
    <div class="form-group">
        <label>Ürün Fiyatı</label>
        <input asp-for="ProductPrice" class="form-control" enabled />
    </div>
    <div class="form-group">
        <label>Stok Miktarı</label>
        <input asp-for="ProductQuantity" class="form-control" enabled />
    </div>
    <div class="form-group">
        <input asp-for="ProductId" class="form-control" type="hidden" />
        <input asp-for="ProductStatus" class="form-control" type="hidden" />
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>


</form>