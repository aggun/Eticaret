@using WebApplication6.Models.Entity
@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string status;
    string format;
    int i = 0;
}

<h1>Index</h1>
<table class="table table-bordered">
    <tr>
        <th>Sıra</th>
        <th>Kategorisi</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Durum</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(i=i+1)</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.ProductName</td>
            <td>@item.ProductPrice</td>
            <td>@item.ProductQuantity</td>
            @if (item.ProductStatus == true)
            {
                status = "Pasif Yap";
                format = "btn btn-danger";
            }
            else
            {
                status = "Aktif Yap";
                format = "btn btn-success";
            }
            <td><a href="/Product/ChangeStatusProduct/@item.ProductId" class="@format">@status</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
        </tr>

    }
</table>
<a href="/Product/AddProduct/" class="btn btn-outline-success col-12">Yeni Ürün Ekle</a>
